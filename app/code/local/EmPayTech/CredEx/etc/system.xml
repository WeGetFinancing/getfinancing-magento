<?xml version="1.0"?>
<config>
  <sections>
    <!-- payment tab -->
    <payment>
      <groups>
        <!-- credex fieldset -->
        <credex translate="label" module="paygate">
          <!-- will have title 'Credex' -->
          <label>Credex</label>
          <!-- position between other payment methods -->
          <sort_order>670</sort_order>
          <!-- do not show this configuration options in store scope -->
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>0</show_in_store>
          <fields>
            <!-- is this payment method active for the website? -->
            <active translate="label">
              <!-- label for the field -->
              <label>Enabled</label>
              <!-- input type for configuration value -->
              <frontend_type>select</frontend_type>
              <!-- model to take the option values from -->
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <!-- field position -->
              <sort_order>1</sort_order>
              <!-- do not show this field in store scope -->
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </active>
            <order_status translate="label">
              <label>New order status</label>
              <frontend_type>select</frontend_type>
              <!-- we want to be able to have pending instead
     see http://webmasters.stackexchange.com/questions/26900/pending-status-for-orders-paid-via-auth-net
                            <source_model>adminhtml/system_config_source_order_status_processing</source_model>
-->
              <source_model>adminhtml/system_config_source_order_status_new</source_model>
              <sort_order>4</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </order_status>
            <title translate="label">
              <label>Title</label>
              <frontend_type>text</frontend_type>
              <sort_order>2</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </title>
            <gateway_url_staging translate="label">
              <label>Gateway URL for staging</label>
              <frontend_type>text</frontend_type>
              <sort_order>3</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </gateway_url_staging>
            <gateway_url_production translate="label">
              <label>Gateway URL for production</label>
              <frontend_type>text</frontend_type>
              <sort_order>4</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </gateway_url_production>
            <platform translate="label">
              <label>Platform</label>
              <frontend_type>select</frontend_type>
              <!--
                            <source_model>adminhtml/system_config_source_yesno</source_model>
-->
              <source_model>credex_adminhtml/system_config_source_mycustomoptions</source_model>
              <sort_order>5</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </platform>
            <merch_id translate="label">
              <label>Merchant ID</label>
              <frontend_type>text</frontend_type>
              <sort_order>6</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </merch_id>
            <username translate="label">
              <label>username</label>
              <frontend_type>text</frontend_type>
              <sort_order>7</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </username>
            <password translate="label">
              <label>password</label>
              <frontend_type>text</frontend_type>
              <sort_order>8</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </password>
            <min_order_total translate="label">
              <label>Minimum Order Total</label>
              <frontend_type>text</frontend_type>
              <sort_order>98</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </min_order_total>
            <max_order_total translate="label">
              <label>Maximum Order Total</label>
              <frontend_type>text</frontend_type>
              <sort_order>99</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </max_order_total>
          </fields>
        </credex>
      </groups>
    </payment>
  </sections>
</config>
